{
  "action": {
    "default_popup": "src/panel/index.html#/popup"
  },
  "icons": {
    "128": "public/logo.png",
    "16": "public/logo.png",
    "48": "public/logo.png"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "src/content-script/index.ts"
      ],
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "manifest_version": 3,
  "devtools_page": "src/devtools/index.html",
  "name": "Storage Editor",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "version": "1.0.0",
  "web_accessible_resources": [
    {
      "matches": [
        "*://*/*"
      ],
      "resources": [
        "src/content-script/index.ts"
      ]
    }
  ]
}
